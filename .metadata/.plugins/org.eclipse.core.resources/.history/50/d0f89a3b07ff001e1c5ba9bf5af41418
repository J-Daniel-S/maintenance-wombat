package the.best.maintenancewombat.config;

import org.springframework.boot.autoconfigure.jackson.Jackson2ObjectMapperBuilderCustomizer;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.http.converter.json.Jackson2ObjectMapperBuilder;

import com.fasterxml.jackson.annotation.JsonInclude;
import the.best.maintenancewombat.config.utils.PriorityDeserializer;

@Configuration
public class MaintenanceServiceConfig {
	
	// required to recognize improperly upper cased enum strings

	@Bean
	public Jackson2ObjectMapperBuilder builder() {
		return new Jackson2ObjectMapperBuilder().deserializers(new PriorityDeserializer()).des
	}
	
}
